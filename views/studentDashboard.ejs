<!DOCTYPE html>
<html>

<head>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f8f8;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h2 {
      text-align: center;
      color: #3498db;
    }

    .enrolled-courses-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .enrolled-course-card {
      border: 1px solid #ddd;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 20px;
      width: 300px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .enrolled-course-card:hover {
      transform: scale(1.05);
    }

    .enrolled-course-card h3 {
      color: #3498db;
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .enrolled-course-card p {
      color: #555;
      font-size: 1rem;
      margin-bottom: 10px;
    }

    .enrolled-course-card a {
      display: block;
      color: #3498db;
      font-weight: bold;
      text-decoration: none;
      margin-top: 10px;
    }

    .enrolled-course-card a:hover {
      text-decoration: underline;
    }
    img{
      width: 80%;
      height: 80%;
    }
  </style>
</head>

<body>
  <%-include("navbar.ejs")%>
    <% if (enrolledCourses.length> 0) { %>
      <h2>Your Enrolled Courses:</h2>
      <div class="enrolled-courses-container">
        <% enrolledCourses.forEach(enrollment=> { %>
          <div class="enrolled-course-card">
            <div>
              <a href="/courses/<%= enrollment.course._id %>">
                <img src="/<%=enrollment.course.thumbnail%>" />
                <h3>
                  <%= enrollment.course.title %>
                </h3>
                <p>
                  <%= enrollment.course.price %> USD
                </p>
                <p>
                  <%= enrollment.course.description%>
                </p>
              </a>
            </div>
          </div>
          <% }); %>
      </div>
      <% } else { %>
        <p>You are not enrolled in any courses yet.</p>
        <% } %>
</body>

</html>