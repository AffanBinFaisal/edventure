<!DOCTYPE html>
<html>

<head>
  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #f8f8f8;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    h1 {
      text-align: center;
      color: #3498db;
    }

    .courses-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: center;
    }

    .course-card {
      border: 1px solid #ddd;
      background-color: #fff;
      border-radius: 8px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      margin: 20px;
      padding: 20px;
      width: 300px;
      text-align: center;
      transition: transform 0.3s ease;
    }

    .course-card:hover {
      transform: scale(1.05);
    }

    .course-card img {
      max-width: 100%;
      height: auto;
      border-radius: 8px;
      margin-bottom: 10px;
    }

    .course-card h2 {
      color: #3498db;
      font-size: 1.5rem;
      margin-bottom: 10px;
    }

    .course-card p {
      color: #555;
      font-size: 1rem;
      margin-bottom: 10px;
    }

    .course-card a {
      display: block;
      color: #3498db;
      font-weight: bold;
      text-decoration: none;
      margin-top: 10px;
    }

    .course-card a:hover {
      text-decoration: underline;
    }

    .add-course-button {
      background-color: #2ecc71;
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 18px;
      border-radius: 4px;
      cursor: pointer;
      text-decoration: none;
      display: inline-block;
      margin-top: 20px;
      transition: background-color 0.3s ease;
    }

    .add-course-button:hover {
      background-color: #27ae60;
    }
  </style>
</head>

<body>
  <%-include("navbar.ejs")%>
  <h1>Your Courses</h1>

  <a href="/add-course" class="add-course-button">Add Course</a>

  <% if (courses.length > 0) { %>
    <div class="courses-container">
      <% courses.forEach(course => { %>
        <div class="course-card">
          <a href="/courses/<%= course._id %>">
            <img src="/<%= course.thumbnail %>" alt="<%= course.title %> Thumbnail" />
            <h2><%= course.title %></h2>
            <p>Price: $<%= course.price %></p>
            <p><%= course.description %></p>
            <a href="/edit-course/<%= course._id %>">Edit</a>
          </a>
        </div>
      <% }); %>
    </div>
  <% } else { %>
    <p>No courses available.</p>
  <% } %>
</body>

</html>
