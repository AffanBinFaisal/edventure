<!-- views/dashboard.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Home</title>
  <style>
    body {
      margin: 0;
      padding: 0;
    }

    section {
      background-image: url("/public/assets/home.jpeg");
      background-repeat: no-repeat;
      background-size: cover;
      background-position: center;
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
    }

    .search-box {
      width: 40%;
      margin: 20px auto;
      padding: 20px;
      border-radius: 8px;
    }


    form {
      margin-top: 20px;
      display: flex;
      justify-content: space-between;
      align-items: center;
    }

    input {
      padding: 10px;
      font-size: 16px;
      border: none;
      border-radius: 4px;
      flex-grow: 1;

    }

    button {
      background-color: #2ecc71;
      color: #fff;
      border: none;
      padding: 10px 20px;
      font-size: 18px;
      cursor: pointer;
      border-radius: 4px;
      transition: background-color 0.3s ease;
    }

    button:hover {
      background-color: #27ae60;
    }

    h1 {
      font-size: 3rem;
      text-align: center;
      color: #fff
    }
  </style>
</head>

<body>
  <%- include('navbar.ejs') %>

  <section>
    <div id="search-box">
      <h1>Edventure</h1>
      <form action="/courses" method="GET">
        <input type="text" id="search" name="search" placeholder="Enter course name">
        <button type="submit">Search</button>
      </form>
    </div>
  </section>

  <!-- Add additional content or customize based on your needs -->

  <!-- Add your JavaScript scripts if needed -->
</body>

</html>