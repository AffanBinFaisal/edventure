<!-- courseDetails.ejs -->

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>
    <%= course.title %> Details
  </title>
  <style>
    .video-container {
      display: none;
    }
  </style>
</head>

<body>

  <h1>
    <%= course.title %> Details
  </h1>

  <img src="/<%=course.thumbnail%>"/>

  <div>
    <p>Description: <%= course.description %>
    </p>
    <p>Price: $<%= course.price %>
    </p>
  </div>
  <%if(enrollment.length==0){%>
    <div>
      <button onclick="enroll('<%=course._id%>')">Enroll</button>
    </div>
    <%}%>

      <div id="video-container" class="video-container">
        <video width="100%" height="700" controls>
          <source type="video/mp4">
          Your browser does not support the video tag.
        </video>
      </div>

      <% if (course.chapters.length> 0) { %>
        <h2>Chapters</h2>
        <ul>
          <% course.chapters.forEach(chapter=> { %>
            <li>
              <h3>
                <%= chapter.title %>
              </h3>
              <p>
                <%= chapter.content %>
              </p>

              <!-- Display videos -->
              <% if (chapter.videos && chapter.videos.length> 0) { %>
                <ul>
                  <% chapter.videos.forEach(video=> { %>
                    <li>
                      <h4>
                        <%= video.title %>
                      </h4>
                      <p>
                        <%= video.content %>
                      </p>
                      <button onclick="showVideo('<%= video.url %>')">Show Video</button>
                    </li>
                    <% }); %>
                </ul>
                <% } %>
            </li>
            <% }); %>
        </ul>
        <% } else { %>
          <p>No chapters available for this course.</p>
          <% } %>

            <script>
              function showVideo(url) {
                const videoContainer = document.getElementById("video-container");
                const source = videoContainer.querySelector("video").querySelector("source");
                source.src = url;
                videoContainer.style.display = 'block';
              }

              async function enroll(courseId) {
                try {
                  const response = await fetch('/enroll', {
                    method: 'POST',
                    headers: {
                      'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ courseId }),
                  });

                  if (response.ok) {
                    console.log('Enrollment successful!');
                  } else {
                    console.error('Enrollment failed:', response.statusText);
                  }
                } catch (error) {
                  console.error('Error during enrollment:', error.message);
                }

              }
            </script>

</body>

</html>